<div class="col-md-6">
    <h2>Search for a Recipe!</h2>

    <form id="dishSearch" method="GET">
        <h4>Search by name of the dish:</h4>
        <input type="text" name="Title">
        <button type="submit" class="submit">Dish Search</button>
    </form>

    <form id="" action="" method="GET">
        <h4>Search by name of the chef:</h4>
        <input type="text" name="Author">
        <button type="submit" class="submit">Chef Search</button>
    </form>

    <form id="" action="" method="GET">
        <h4>Search by an ingredient:</h4>
        <input type="text" name="ingredients">
        <button type="submit" class="submit">Ingredients Search</button>
    </form>
    
</div>

<div class="col-md-6">
    <h2>Recipes</h2>
    <ul id="">
    {{#each recipe}}
        <li>
            <h2>Title: </h2>{{dataValues.title}}
            <h3>Chef: </h3>{{dataValues.author}}
            <h3>Ingredients: </h3>{{dataValues.ingredients}}
            <h3>Instructions: </h3>{{dataValues.instructions}}
        </li>
    {{/each}}
    </ul>
</div>
