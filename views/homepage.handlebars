  <div class="container">
    <div class="row">

      <div class="col-md-6">
        <h2>What would you like to do?</h2>
        <a href="/search"><button class="homepage_options">Search For Recipes</button></a>
        <a href="/add"><button class="homepage_options">Add a New Recipe</button></a>
      </div>

      <div class="col-md-6">
        <h2>Most Recent Additions to the Cook Book</h2>

        {{#each recipe}}

        <div class="auto_display" data-index="{{id}}">
          <h3 class="title">{{title}}</h3>
          <br>
          <h4>Chef:</h4>
          <h5 class="author">{{author}}</h5>
          <br>
          <h4>Ingredients:</h4>
          <p class="ingredients">{{ingredients}}</p>
          <br>
          <h4>Instructions:</h4>
          <p class="Instructions">{{Instructions}}</p>
        </div>

        {{/each}}

      </div>

    </div>
  </div>